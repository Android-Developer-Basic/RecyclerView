<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.ViewItem.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <style name="TextAppearance.Archive" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.ViewItem.Subtitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/item_subtitle</item>
    </style>

    <style name="TextAppearance.ViewItem.Text" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/item_text</item>
    </style>

    <style name="TextAppearance.ViewItem.DateTimeText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/item_date_text</item>
    </style>
</resources>