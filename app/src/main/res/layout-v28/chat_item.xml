<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarContainer"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circle"
        android:scaleType="centerCrop"
        android:background="@color/black"

        />

    
    
    <TextView
        android:id="@+id/nik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/nik_name_color"
        android:textFontWeight="500"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <ImageView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/nik"
        app:layout_constraintTop_toTopOf="@id/nik"
        app:layout_constraintBottom_toBottomOf="@id/nik"

        />
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/icon1"
        app:layout_constraintTop_toTopOf="@id/nik"
        app:layout_constraintBottom_toBottomOf="@id/nik"


        />
    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintTop_toBottomOf="@id/nik"

        >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:textColor="@color/message_color"
            />
       

    </LinearLayout>
    <ImageView
        android:id="@+id/deliveryIcon"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/notOpenedMessageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/notOpenedMessageCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3.5dp"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            android:textFontWeight="500"
            android:textColor="@color/white"
            />

    </LinearLayout>
   
    

</androidx.constraintlayout.widget.ConstraintLayout>