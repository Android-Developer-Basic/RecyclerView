<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- add a Image image.png in your Drawable folder -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/messageAuthor"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Support"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="13dp"
        android:text="Thu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/isRead"
        android:layout_width="18.88dp"
        android:layout_height="7.41dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/lastMessage"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Yes it happened."
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/messageAuthor" />

    <ImageView
        android:id="@+id/numberMessageIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/lastMessage"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/numberMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="19dp"
        android:text="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/lastMessage" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="53dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Telegram"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/verified"
            android:layout_width="13.76dp"
            android:layout_height="13.76dp"
            android:layout_marginTop="10.62dp"
            android:visibility="gone"
            tools:srcCompat="@drawable/verified"/>

        <ImageView
            android:id="@+id/scam"
            android:layout_width="44dp"
            android:layout_height="17dp"
            android:visibility="gone"
            tools:srcCompat="@drawable/scam"/>

        <ImageView
            android:id="@+id/mute"
            android:layout_width="10.59dp"
            android:layout_height="11.65dp"
            android:visibility="gone"
            app:srcCompat="@drawable/mute" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>