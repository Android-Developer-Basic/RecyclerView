<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="61dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nameChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:lineSpacingExtra="0sp"
        android:translationY="-3dp"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#222222"
        android:fontFamily="@font/roboto"
        android:text="Pizza"
        android:layout_marginBottom="4dp"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameChat"
        android:lineSpacingExtra="0sp"
        android:translationY="-1dp"
        android:gravity="top"
        android:textSize="14sp"
        android:textColor="#434449"
        android:text="jija" />

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@id/titleChat"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black"
        android:layout_marginTop="2dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/previewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imagePreview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="6dp"
        android:textSize="15sp"
        android:textColor="#8D8E90"
        android:text="Yes, they are necessary"
        android:lineSpacingExtra="0sp"
        android:gravity="top"/>
    
    <ImageView
        android:id="@+id/notMute"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/nameChat"
        android:layout_marginLeft="4dp"
        android:background="@drawable/mute_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>