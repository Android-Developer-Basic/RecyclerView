<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="1px">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/archive_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/archive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/archive_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/archive"
            app:layout_constraintBottom_toTopOf="@id/archive_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/archive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/archive_text"
            android:textColor="@color/archive_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/archive_image"
            app:layout_constraintStart_toStartOf="@id/archive_image"
            app:layout_constraintTop_toBottomOf="@id/archive_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/avatar" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:lineHeight="19dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="@+id/avatar"
            tools:text="Name" />

        <ImageView
            android:id="@+id/verified"
            android:layout_width="13.76dp"
            android:layout_height="13.76dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@id/item_name"
            app:layout_constraintStart_toEndOf="@id/item_name"
            app:layout_constraintTop_toTopOf="@id/item_name"
            android:src="@drawable/verified" />

        <ImageView
            android:id="@+id/scam"
            android:layout_width="44dp"
            android:layout_height="17dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@id/item_name"
            app:layout_constraintStart_toEndOf="@id/verified"
            app:layout_constraintTop_toTopOf="@id/item_name"
            android:src="@drawable/scam" />

        <ImageView
            android:id="@+id/mute"
            android:layout_width="13.76dp"
            android:layout_height="13.76dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@id/item_name"
            app:layout_constraintStart_toEndOf="@id/scam"
            app:layout_constraintTop_toTopOf="@id/item_name"
            android:src="@drawable/mute" />

        <ImageView
            android:id="@+id/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/item_name"
            app:layout_constraintEnd_toStartOf="@id/item_time"
            app:layout_constraintTop_toTopOf="@id/item_name"
            android:src="@drawable/check" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:lineHeight="15dp"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@id/item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_name"
            tools:text="11:38 AM" />

        <ImageView
            android:id="@+id/count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_time"
            android:src="@drawable/circle" />

        <TextView
            android:id="@+id/count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/count"
            app:layout_constraintEnd_toEndOf="@+id/count"
            app:layout_constraintStart_toStartOf="@id/count"
            app:layout_constraintTop_toTopOf="@id/count"
            tools:text="1" />

        <TextView
            android:id="@+id/item_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineHeight="16dp"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_name"
            tools:text="Caption" />

        <TextView
            android:id="@+id/item_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@id/count"
            app:layout_constraintStart_toStartOf="@id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_caption"
            tools:text="Yes, they are necessary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>